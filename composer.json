{
    "name": "ixudra/render",
    "description": "Custom PHP rendering library for the Laravel framework - developed by Ixudra",
    "version": "1.3.0",
    "keywords": ["Ixudra", "Laravel", "Rendering"],
    "homepage": "https://ixudra.be",
    "license": "MIT",

    "authors": [
        {
            "name": "Jan Oris",
            "email": "jan.oris@gmail.com"
        }
    ],

    "require": {
        "php": ">=5.4.0",
        "illuminate/support": ">=6.0",
        "ixudra/translation": "^5.3"
    },

    "autoload": {
        "psr-4": {
            "Ixudra\\Render\\": "src/"
        }
    },

    "extra": {
        "laravel": {
            "providers": [
                "Ixudra\\Render\\RenderServiceProvider"
            ],
            "aliases": {
                "Render": "Ixudra\\Render\\Facades\\Render"
            }
        }
    }
}
